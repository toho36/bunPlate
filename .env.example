# Environment variables for BunPlate
# Copy this file to .env.local and fill in your own values

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="BunPlate"
NEXT_PUBLIC_APP_DESCRIPTION="Modern web application boilerplate"

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/bunplate"

# NextAuth.js
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Email Configuration (Optional)
EMAIL_SERVER_HOST=""
EMAIL_SERVER_PORT=""
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""
EMAIL_FROM=""

# Redis/KV (Optional - for caching and rate limiting)
REDIS_URL=""
KV_URL=""
KV_REST_API_URL=""
KV_REST_API_TOKEN=""
KV_REST_API_READ_ONLY_TOKEN=""

# Upstash Redis (Alternative for rate limiting)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Analytics (Optional)
VERCEL_ANALYTICS_ID=""
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST=""

# Monitoring (Optional)
SENTRY_DSN=""

# Development
NODE_ENV="development"
SKIP_ENV_VALIDATION="false"